{{!
    @template theme_moove/frontpage_guest_loginbtn

    Guest frontpage template.

    Moove frontpage guest layout template.

    Context variables required for this template:
    * loginurl - The login token
    * logintoken - The csrf token

    Example context (json):
    {
        "loginurl": "siteurl/login.php",
        "logintoken":"abcde123"
    }
}}

<div class="loginform">
    <form class="form-inline login-form" action="{{{ config.wwwroot }}}/login/index.php" method="POST" role="form">
        <input type="hidden" name="logintoken" value="{{logintoken}}">
        <div class="form-group mb-2">
            <label for="username" class="mr-2">
                {{^canloginbyemail}}
                    {{#str}}username{{/str}}
                {{/canloginbyemail}}
                {{#canloginbyemail}}
                    {{#str}}usernameemail{{/str}}
                {{/canloginbyemail}}
            </label>
            <input type="text" class="form-control" id="username" name="username" placeholder="{{#str}}username{{/str}}" required />
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label for="password" class="mr-2">{{#str}}password{{/str}}</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="{{#str}}password{{/str}}" required />
        </div>
        <button type="submit" class="btn btn-primary mb-2">{{#str}}login{{/str}}</button>
    </form>
    <p class="login-mobile"><a class="btn btn-primary text-white" href="{{{ config.wwwroot }}}/login/index.php">{{#str}}login{{/str}}</a></p>
    <p class="m-0 text-right">{{#str}}forgottenpassword, theme_moove{{/str}} <a href="{{{ config.wwwroot }}}/login/forgot_password.php">{{#str}}clickhere, theme_moove{{/str}}</a></p>
</div>